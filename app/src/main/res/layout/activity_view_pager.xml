<?xml version="1.0" encoding="utf-8"?>
<!--드로어 레이아웃-->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DrawerWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- CONTENT ( 드로어 제외한 나머지 요소 ) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wrap ( 메뉴버튼 제외 )-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 헤더 ( 상단 )  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <!-- 좌측 ( 검색지역 )-->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:text="검색지역"
                        android:textSize="10dp"/>
                    <Spinner
                        android:id="@+id/spinnerLocate"
                        android:layout_width="100dp"
                        android:layout_height="35dp"/>
                </LinearLayout>

                <!-- 우측 ( 검색버튼 )-->
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!-- 돋보기 -->
                        <ImageButton
                            android:id="@+id/btnSrchText"
                            android:background="@drawable/ic_search"
                            android:layout_marginRight="10dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                        <!-- 맵 -->
                        <ImageButton
                            android:id="@+id/btnSrchMap"
                            android:background="@drawable/ic_map_alt"
                            android:layout_marginRight="10dp"
                            android:layout_width="35dp"
                            android:layout_height="35dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- 헤더 ( 상단 )  -->
            <!-- 헤더 ( 중단 )  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorDarkHeader"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnGoLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:layout_weight="1"
                    android:text="애견동반" />
                <Button
                    android:id="@+id/btnGoRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:layout_weight="1"
                    android:text="애견전문" />
            </LinearLayout>
            <!-- 헤더 ( 중단 )  -->
            <!-- 헤더 ( 하단 )  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorDarkHeader">
                <!-- 견사이즈 -->
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <!-- Spinner -->
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/spinnerSize"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <!-- 장소구분 -->
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <!-- Spinner -->
                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/spinnerPlace"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="35dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            <!-- 헤더 ( 하단 )  -->

            <!-- 뷰페이저 -->
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <!-- 뷰페이저 -->
        </LinearLayout>
        <!-- Wrap -->

        <!-- 메뉴버튼 -->
        <Button
            android:id="@+id/btn_openDrawer"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/menubar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="59dp"
            android:layout_height="64dp" />
    </RelativeLayout>
    <!-- CONTENT ( 드로어 제외 나머지 요소 ) -->


    <!-- 드로어 요소 -->
    <!--드로어 레이아웃 배경 -->
    <FrameLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>
    <!--드로어 레이아웃 -->
    <LinearLayout
        android:id="@+id/drawerBox"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="match_parent">

        <!-- 로그아웃 상태에서 보여줄 레이아웃 -->
        <LinearLayout
            android:id="@+id/loginContentBox"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="240dp"
            android:layout_height="150dp">
            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/chracter"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </RelativeLayout>
            <!-- 로그인하러 가기 버튼 -->
            <RelativeLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/btnGoLogin"
                    android:text="로그인하러 가기"
                    android:textColor="@color/defaultText"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />
            </RelativeLayout>
            <!-- 로그인하러 가기 버튼 -->
        </LinearLayout>
        <!-- 로그아웃 상태에서 보여줄 레이아웃 -->
        <!-- 로그인 상태에서 보여줄 레이아웃 -->
        <LinearLayout
            android:id="@+id/MemberProfileBox"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:layout_width="240dp"
            android:layout_height="150dp">
            <RelativeLayout
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/memberImg"
                    android:layout_centerInParent="true"
                    android:src="@drawable/chracter"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />
            </RelativeLayout>
            <!-- 로그인하러 가기 버튼 -->
            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/memberName"
                    android:text="홍길동"
                    android:textSize="15dp"
                    android:textColor="@color/defaultText"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <!-- 로그인하러 가기 버튼 -->
        </LinearLayout>
        <!-- 로그인 상태에서 보여줄 레이아웃 -->

        <!-- 리스트 -->
        <ListView
            android:id="@+id/drawerListView"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="#EDEDED"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </LinearLayout>
    <!-- 드로어 요소 -->


</android.support.v4.widget.DrawerLayout>